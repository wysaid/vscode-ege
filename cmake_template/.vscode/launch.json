    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ege-demo.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
        },
        {
            "name": "Launch Debug (Mac/Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/bash",
            "args": [
                "-c",
                "echo Run ${workspaceFolder}/build/ege-demo.exe done."
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Run Project",
        }
    ]
}