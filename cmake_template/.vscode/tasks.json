{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Load Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "(test -d build || (mkdir -p build && cd build && cmake ..) );"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "(if not exist \"build\" (mkdir build && cd build && cmake ..) ) & cmake \"${workspaceFolder}/build\""
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "(test -d build || (mkdir -p build && pushd . && cd build && cmake .. && popd) ); cmake --build build --parallel $(nproc)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "(if not exist \"build\" (mkdir build && cd build && cmake ..) ) & cmake --build \"${workspaceFolder}/build\" --parallel %NUMBER_OF_PROCESSORS%"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "Load And Build Project",
            "type": "shell",
            "command": "echo",
            "args": [
                "Load And Build Project - Done",
            ],
            "group": "build",
            "dependsOn": [
                "Load Project",
                "Build Project"
            ],
            "dependsOrder": "sequence",
        },
        {
            "label": "Run Project",
            "type": "shell",
            "command": "wine64",
            "args": [
                "ege-demo.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": [
                "Build Project"
            ],
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "ege-demo.exe"
                ],
                "options": {
                    "cwd": "${workspaceFolder}/build/Debug"
                }
            }
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "git clean -fdx build || rm -rf build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "git clean -fdx build || rmdir /s /q build"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        }
    ]
}