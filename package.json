{
	"name": "ege",
	"displayName": "ege",
	"description": "Auto configuration for ege (https://xege.org)",
	"version": "0.1.0",
	"icon": "images/logo.png",
	"publisher": "wysaid",
	"repository": {
		"type": "git",
		"url": "https://github.com/wysaid/vscode-ege"
	},
	"homepage": "https://github.com/wysaid/vscode-ege",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ege.setup-project",
		"onCommand:ege.build-and-run-current-file",
		"onCommand:ege.setup-global",
		"onCommand:ege.cleanup-caches",
		"onCommand:ege.open-cache-dir"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ege.setup-project",
				"title": "EGE: Setup with this project"
			},
			{
				"command": "ege.setup-global",
				"title": "EGE: Setup in global scope"
			},
			{
				"command": "ege.cleanup-caches",
				"title": "EGE: Cleanup caches"
			},
			{
				"command": "ege.open-cache-dir",
				"title": "EGE: Open cache dir"
			},
			{
				"command": "ege.build-and-run-current-file",
				"title": "EGE: Build and run current file"
			}
		],
		"configuration": {
			"type": "object",
			"title": "ege configuration",
			"properties": {
				"ege.update_url": {
					"type": "string",
					"description": "An url to get latest version of EGE (default: https://xege.org/download/ege-latest-version)",
					"scope": "resource"
				},
				"ege.showEditorContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Show 'ege' in editor context menu",
					"scope": "resource"
				},
				"ege.explorerContextMenu": {
					"type": "boolean",
					"default": true,
					"description": "Show 'ege' in explorer context menu",
					"scope": "resource"
				}
			}
		},
		"keybindings": [],
		"menus": {
			"editor/context": [
				{
					"command": "ege.setup-project",
					"when": "!inOutput && config.ege.showEditorContextMenu",
					"group": "1_modification"
				},
				{
					"command": "ege.build-and-run-current-file",
					"when": "!inOutput && config.ege.showEditorContextMenu",
					"group": "1_modification"
				}
			],
			"explorer/context": [
				{
					"command": "ege.setup-project",
					"when": "config.ege.explorerContextMenu",
					"group": "1_modification"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"commands": {
		"file": "echo ${file}",
		"fileDirname": "echo ${fileDirname}"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.0.0",
		"glob": "^7.2.0",
		"mocha": "^8.1.3",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"decompress-zip": "^0.3.3",
		"fs-extra": "^10.0.0",
		"https": "^1.0.0",
		"iconv-lite": "^0.6.3"
	}
}
