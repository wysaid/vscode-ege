{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Load And Build Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "mkdir -p build && cd build && cmake .. && cmake --build . --parallel $(nproc)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "(test -d build || (mkdir -p build && cd build && cmake ..) ); cmake --build build --parallel $(nproc)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Project",
            "type": "shell",
            "command": "wine64",
            "args": [
                "ege-demo.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": [
                "Build Project"
            ],
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "ege-demo.exe"
                ],
                "options": {
                    "cwd": "${workspaceFolder}/build/Debug"
                }
            }
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "git clean -fdx build || rm -rf build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}